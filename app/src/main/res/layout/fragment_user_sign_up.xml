<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentUserSignUp"
    android:background="@color/light_green">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="ENTER INFORMATION"
                android:textColor="@color/dark_green"
                android:textSize="28dp"
                android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Name"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/account_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_green" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Username"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/username_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/username_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_green" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterMaxLength="50"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/email_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/dark_green" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/birthday_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:hint="Birthday"
                    android:inputType="datetime"
                    android:textColorHint="@color/medium_green" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/birthday_picker_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/imagebuttonstyle"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="Pick Date"
                    android:layout_weight="2"/>



            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Target Savings"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterMaxLength="50"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/money_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/targetsavings_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/dark_green" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterEnabled="false"
                app:counterMaxLength="20"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/medium_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/password_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_green" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Confirm Password"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterEnabled="false"
                app:counterMaxLength="20"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/medium_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/password_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirm_password_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_green" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="SET PIN"
                android:textColor="@color/dark_green"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.chaos.view.PinView
                android:id="@+id/setPinView"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:inputType="number"
                android:layout_marginVertical="20dp"
                android:itemBackground="@drawable/pinview_background"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cursorWidth="2dp"
                app:hideLineWhenFilled="false"
                app:itemCount="4"
                app:itemHeight="48dp"
                app:itemRadius="4dp"
                app:itemSpacing="6dp"
                app:itemWidth="48dp"
                app:lineColor="#428b2b"
                app:lineWidth="2dp"
                app:viewType="rectangle"
                android:layout_centerHorizontal="true"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/imagebuttonstyle"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="SIGN UP"
                android:textSize="20dp"/>






        </LinearLayout>
        </ScrollView>
        </LinearLayout>




    </androidx.cardview.widget.CardView>





</LinearLayout>