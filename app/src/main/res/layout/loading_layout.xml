<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/dark_green"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:background="@color/white">
        </ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/loading_icon"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:elevation="30dp"
                android:src="@drawable/analytics_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:text="please wait uwu"
                android:textAlignment="center"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/loading_icon"
                app:layout_constraintStart_toStartOf="@+id/loading_icon"
                app:layout_constraintTop_toBottomOf="@+id/loading_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.cardview.widget.CardView>


</LinearLayout>