<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_green"
    tools:context=".AccountFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/Balance_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="ACCOUNT SETTINGS"
                android:textColor="@color/dark_green"
                android:textSize="34dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Name"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/account_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_green"
                    android:id="@+id/name_edit"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Username"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/username_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_green"
                    android:id="@+id/username_edit"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:textColorHint="@color/medium_green"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/medium_green"
                app:counterTextColor="@color/medium_green"
                app:cursorColor="@color/dark_green"
                app:hintTextColor="@color/medium_green"
                app:startIconDrawable="@drawable/email_icon"
                app:startIconTint="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_green"
                    android:id="@+id/email_edit"/>
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/birthday_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:hint="Birthday"
                    android:inputType="datetime"
                    android:textColorHint="@color/medium_green" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/imagebuttonstyle"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="Pick Date"
                    android:layout_weight="2"/>



            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_acc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:text="EDIT DETAILS"
                android:background="@color/light_green"
                android:gravity="center"
                android:textColor="@color/dark_green"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:background="@color/dark_green"
                android:gravity="center"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textStyle="normal" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>